let mapleader="\<space>"

"navigation
nnoremap ]m :vsc Edit.NextMethod<cr>
nnoremap [m :vsc Edit.PreviousMethod<cr>
nnoremap ]c :vsc Diff.NextDifference<cr>
nnoremap [c :vsc Diff.PreviousDifference<cr>
nnoremap ]l  :vsc Edit.NextHighlightedReference<cr>
nnoremap [l  :vsc Edit.PreviousHighlightedReference<cr>
nnoremap ]d :vsc Edit.GoToNextLocation<cr>
nnoremap [d :vsc Edit.GoToPrevLocation<cr>

nnoremap <leader>h :vsc EditorContextMenus.CodeWindow.ToggleHeaderCodeFile<cr>


nnoremap <leader>vca :vsc View.ShowSmartTag<CR>
nnoremap <leader>vrr :vsc Edit.FindAllReferences<CR>
nnoremap <leader>vrn :vsc Refactor.Rename<CR>
nnoremap <leader>pv :vsc View.SolutionExplorer<cr>
nnoremap <leader>pf :vsc Edit.GoToFile<CR>
nnoremap <leader>ps :vsc Edit.GoToAll<CR>

nnoremap <leader>vce :vsc View.ErrorList<cr>
nnoremap <leader>vco :vsc View.Output<cr>

nnoremap gi :vsc Edit.GoToImplementation<CR>
nnoremap gd :vsc Edit.GoToDefinition<CR>

xnoremap <leader>p "_dP

nnoremap <leader>y "+y
vnoremap <leader>y "+y
nnoremap <leader>Y "+Y

nnoremap "<leader>d" "_d
vnoremap "<leader>d" "_d

"Build/debug
nnoremap <leader>b :vsc Build.BuildSolution<CR>
nnoremap <leader>d :vsc Debug.Start<CR>

nnoremap <insert> :vsc Debug.ToggleBreakpoint<cr>

"refactoring/formatting
nnoremap <leader>f :vsc Edit.FormatDocument<CR>

"version control
nnoremap <leader>gd :vsc Team.Git.CompareWithUnmodified<cr>
nnoremap <leader>gs :vsc Team.Git.GoToGitChanges<cr>

